

@model Class


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <h1>Create Class</h1>
    <div class="row">
        <div class="col-md-12">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Code"></label>
                    <input asp-for="Code" class="form-control" placeholder="Name"/>
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Credit"></label>
                    <input asp-for="Credit" class="form-control" placeholder="Name"/>
                    <span asp-validation-for="Credit" class="text-danger"></span>
                </div>
                <select asp-for="TypeOfCourseId" class="form-control">
                    @foreach (TypeOfCourse tag in ViewBag.courses)
                    {
                        <option value="@tag.Id">
                            @tag.Name
                        </option>
                    }
                </select>
               


                <button type="submit" class="btn-primary">Create</button>
            </form>

        </div>
    </div>
</body>
</html>